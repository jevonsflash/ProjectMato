<UserControl
    x:Class="MusicMink.Controls.ErrorboxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMink.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">

        <StackPanel Width="220" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="180" Height="180" Source="/Img/UserContro.png"  ></Image>
            <TextBlock x:Name="TBMessage" TextAlignment="Center" TextWrapping="Wrap" Foreground="Gray" FontSize="30" HorizontalAlignment="Center"  ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
